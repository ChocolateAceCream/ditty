<div id="form_post">
  <% if state == :new %>
    <form method="post" name="post" action="/post">
  <% else %>
    <form method="post" name="post" action="/post/<%= post.id %>">
  <% end %>
    <div class="header">
      <h3>Title: <input class="value" type="text" name="post[title]" value="<%= post_title(post)||"" %>" /> </h3>
    </div>
    <div id="form_contents">
      <div class="header">
        <h3>Post:</h3>
      </div>
      <textarea name="post[body]" class="value"><%= post.body||"" %></textarea>
    </div>
    <div id="form_tags">
      Tags: <input class="tags" type="text" name="post[tags]" value="<%= post_tags(post)||"" %>" />
    </div>
    <script>
      function confirmDelete() {
        if (confirm("Are you sure you want to delete?")) {
          window.location.href='/post/<%=post.id%>/delete';
        }
      }
    </script>
    <div id="form_buttons">
      <input class="button button_delete" type="button" value="DELETE" onClick="javascript:confirmDelete();" /> &nbsp;
      <input class="button" type="button" value="Cancel!" onClick="javascript:window.location.href='/'" /> &nbsp;
      <input class="button" type="submit" value="Save!" />
    </div>
  </form>
</div>
